{
  "swagger": "2.0",
  "info": {
    "title": "Photo library API",
    "version": "0.1"
  },
  "tags": [
    {
      "name": "SyncPhotosService"
    }
  ],
  "host": "localhost:8080",
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/v1/sync-photos/upload": {
      "post": {
        "summary": "Загрузка новой фотографии",
        "operationId": "SyncPhotosService_UploadPhoto",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/UploadPhotoResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/Status"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/UploadPhotoRequest"
            }
          }
        ],
        "tags": [
          "sync-photo"
        ]
      }
    }
  },
  "definitions": {
    "Any": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string"
        }
      },
      "additionalProperties": {}
    },
    "Status": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        },
        "details": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "#/definitions/Any"
          }
        }
      }
    },
    "UploadPhotoRequest": {
      "type": "object",
      "properties": {
        "paths": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "title": "Пути фотографий которые загружаем (может быть несколько если фото одинаковые)"
        },
        "hash": {
          "type": "string",
          "title": "Рассчитанный на клиенте хеш фотографии"
        },
        "body": {
          "type": "string",
          "format": "byte",
          "title": "Данные фото"
        },
        "update_at": {
          "type": "string",
          "format": "date-time",
          "title": "Информация о последнем изменении фото"
        }
      }
    },
    "UploadPhotoResponse": {
      "type": "object",
      "properties": {
        "success": {
          "type": "boolean",
          "title": "Успешно или нет (если не успешно, можно загрузить попозже)"
        },
        "hash": {
          "type": "string",
          "title": "Хеш фотографии"
        },
        "uploaded_at": {
          "type": "string",
          "format": "date-time",
          "title": "Дата когда фотография была загружена на сервер"
        }
      }
    }
  },
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  }
}
